<?xml version="1.0"?>
<ruleset name="PSR2-Custom">
    <description>The PSR-2 coding standard with some tweaks.</description>
    <arg name="tab-width" value="4"/>

    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">
    </rule>

    <!-- Laravel doesn't use namespaces bu default, ignoring for now. -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <severity>0</severity>
    </rule>

    <exclude-pattern>*.blade.php</exclude-pattern>
    <exclude-pattern>./app/lang/*</exclude-pattern>
    <exclude-pattern>./app/views/*</exclude-pattern>
    <exclude-pattern>./app/storage/*</exclude-pattern>

    <rule ref="PSR1.Files.SideEffects">
        <exclude-patern>*/wp-content/*</exclude-pattern>
    </rule>
</ruleset>
