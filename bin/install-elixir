#!/bin/bash

set -e

BUILD_PACKAGES='automake libncurses5-dev libssl-dev'

sudo apt-get install -y --no-install-recommends $PACKAGES $BUILD_PACKAGES

install-asdf

asdf plugin-add erlang
asdf plugin-add elixir

asdf install erlang 20.0
asdf install elixir 1.6.4

asdf global erlang 20.0
asdf global elixir 1.6.4

sudo apt-get -y remove --purge $(echo $BUILD_PACKAGES)
sudo apt-get -y autoremove
