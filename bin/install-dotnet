#!/bin/bash

set -e

DOTNETCORE_VERSION=$1

echo "deb [arch=amd64] https://apt-mo.trafficmanager.net/repos/dotnet-release/ trusty main" > /etc/apt/sources.list.d/dotnetdev.list
sudo apt-get install -y --no-install-recommends apt-transport-https
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 417A0893
sudo apt-get -y update
sudo apt-get install -y --no-install-recommends dotnet-dev-${DOTNETCORE_VERSION}

